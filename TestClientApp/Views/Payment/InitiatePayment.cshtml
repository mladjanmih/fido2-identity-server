@model TestClientApp.Models.PaymentInitiateViewModel;

@{
    ViewData["Title"] = "InitiatePayment";
}

<h1>Initiate Payment</h1>

<form asp-action="InitiatePayment" asp-controller="Payment">
    <fieldset>
        <div class="form-group">
            <label asp-for="CreditorAccount">Creditor Account</label>
            <input class="form-control" placeholder="Creditor Account" asp-for="CreditorAccount" autofocus>
        </div>
        <div class="form-group">
            <label asp-for="DebtorAccount">Debtor Account</label>
            <input class="form-control" placeholder="Debtor Account" asp-for="DebtorAccount">
        </div>
        <div class="form-group">
            <label asp-for="CreditorName">Creditor Name</label>
            <input class="form-control" placeholder="Creditor Name" asp-for="CreditorName">
        </div>
        <div class="form-group">
            <label asp-for="DebtorName">Debtor Name</label>
            <input class="form-control" placeholder="Debtor Name" asp-for="DebtorName">
        </div>
        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <input class="form-control" placeholder="Amount" asp-for="Amount">
        </div>
        <div class="form-group">
            <button class="btn btn-primary" name="button" value="initiate">Initiate Payment</button>
        </div>
    </fieldset>
</form>
